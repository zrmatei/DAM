<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plannifier"
    tools:context=".AboutUsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="120dp"
        android:layout_margin="20dp"
        android:id="@+id/codreanu_nina_madalina_lv"

        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/main"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codreanu_nina_madalina_nume1"
            android:text="Plesanu Florin-Eduard"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/our_font"
            android:padding="8dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codreanu_nina_madalina_nume2"
            android:text="Zana Razvan-Matei"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/our_font"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codreanu_nina_madalina_nume3"
            android:text="Dumitrescu Doru-Alexandru"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/our_font"

            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codreanu_nina_madalina_nume4"

            android:text="Chingaru George"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/our_font"

            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codreanu_nina_madalina_nume5"
            android:text="Codreanu Nina-Madalina"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/our_font"

            android:padding="8dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_reaction_24"/>


    </LinearLayout>


    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/nina_madalina_tv_about1"
            android:text="@string/txt_about_grupa"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/our_font"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="270dp"
        />
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/nina_madalina_tv_about2"
            android:text="@string/txt_about_serie"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/our_font"


            app:layout_constraintTop_toBottomOf="@id/nina_madalina_tv_about1"
            app:layout_constraintLeft_toLeftOf="@id/nina_madalina_tv_about1"
            android:layout_marginLeft="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>